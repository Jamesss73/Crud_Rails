<div class="form-container">
  <%= form_for @product, html: { class: "product-form" } do |f| %>
      <div class="form-group">
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input-field" %>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "label" %>
    <%= f.text_area :description, class: "input-field" %>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "label" %>
    <%= f.number_field :price, class: "input-field" %>
  </div>
  <div class="form-actions">
<%= f.submit "Guardar", class: "submit-button" %>
  </div>
  <% end %>
</div>

